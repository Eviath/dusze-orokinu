<% if cookies && cookies['cookie_eu_consented'] != 'true' %>
  <div class="cookies-eu js-cookies-eu">
    <span class="cookies-eu-content-holder"><%= t('cookies_eu.cookies_text') %></span>
    <span class="cookies-eu-button-holder">
    <button class="cookies-eu-ok js-cookies-eu-ok btn btn-do-vitru-h"> <%= t('cookies_eu.ok') %> </button>
      <% if defined?(link).present? %>
      <a href="<%= cookies_path %>" class="cookies-eu-link btn btn-do-vitru" target="<%= defined?(target).present? ? target : '' %>"> <%= t('cookies_eu.learn_more') %> </a>
    <% end %>
    </span>
  </div>
<% end %>