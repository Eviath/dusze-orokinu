<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>


  <%= f.text_field :name, placeholder: "Nick", class: 'form-control' %>


  <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>

  <%= f.password_field :password, placeholder: "Hasło", class: 'form-control' %>


  <%= f.password_field :password_confirmation, placeholder: "Powtórz hasło", class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn user-btn" %>
<% end %>
