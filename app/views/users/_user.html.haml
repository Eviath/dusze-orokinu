%li
  .container

    .row
      .user-image
      -if user.avatar.attached?
        =image_tag user_avatar(user, 60)


      .user-profile
        = link_to user.name, user

        .ranks
          %p
          - if user.has_role? :admin
            %button.btn.btn-do-profile.disabled
              %span Administrator

          - if user.has_role? :lider
            %button.btn.btn-profile.disabled
              %span Lider Klanu
  


      .options
        - unless current_user == @user
          %span
            = link_to 'PW', new_message_path(to: user.id),  class: 'btn btn-do-profile-opt' 
