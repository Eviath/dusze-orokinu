- provide(:title, @user.name)


.user-page-wrapper


  .profile-container
    .container
      .row
        .col-md-8.mx-auto.text-center.col-show-box
          %section.show-profile-box
            .user_image
              =image_tag user_avatar(@user, 120), class: 'rounded-circle user-image'

            %h1
              = @user.name

              .ranks
                %p
                - if @user.has_role? :admin
                  %button.btn.btn-do-profile.disabled
                    %span Administrator

                - if @user.has_role? :lider
                  %button.btn.btn-do-profile.disabled
                    %span
                      Lider klanu
                      -if @user.clan.present?
                        =link_to "#{@user.clan.name}", @user.clan, class:'link-vitruvian-light'


              .user_details
                %p
                  Zarejestrowany od:
                  %span= @user.created_at.strftime("%F %T")

                - if !@user.last_seen.blank?
                  %p
                    Ostatnio widziany:
                    %span= @user.last_seen.strftime("%F %T")

                  %p.active
                    (Online #{time_ago_in_words(@user.last_seen)} temu)

              .message-user
                =link_to 'Napisz', new_message_path(to: @user), class: 'btn btn-do-vitruvian'

          -if user_signed_in?
            - if current_user.has_role? :admin

              - if is_lider
                = link_to (is_lider ? "Odbierz rangę lidera klanu" : "Daj rangę lidera klanu"), decline_user_path(@user)
              - else
                = link_to (is_lider ? "Odbierz rangę lidera klanu" : "Daj rangę lidera klanu"), approve_user_path(@user)



          .profil-show-img

            %img{src: "/assets/jedno-gold.png"}