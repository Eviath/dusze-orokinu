    <div class="row">

      <div class="user-image">
      <%= gravatar_for user, size: 50 %>
      </div>

      <div class="user-profile">

        <%= link_to user.name, user %>
      
     
    

        <div class="ranks">

        
        
          <% if user.admin? %>
            <p>
              <button class="btn btn-do-profile disabled">
                <span>Administrator</span></button>
