            <% if user.lider? %>
              <button class="btn btn-profile disabled">
                <span>Lider Klanu</span></button>
            <% end %>
          </p>
        </div>

      </div>


 <div class="options">


 <% unless current_user == user %>
        <span> <%= link_to 'PW', new_message_path(to: user.id),  class: 'btn btn-do-profile-opt ' %></span>
      <% end %>


        <% if current_user?(user) || admin? %>
         

        
           <span><%= button_to "Usuń użytkownika", user, method: :delete, data: { confirm: "Jesteś pewny, że chcesz usunąć tego użytkownika?" }, class: 'btn btn-do-profile-opt ' %></span>

        <% end %>

    </div>


    </div>
  </div>
