= provide(:button_text, 'Zarejestruj')
= provide(:title, 'Rejestracja')



.signup-page-header
  .signup-page-bg

  .signup-page-wrapper
    .signup-page-content
      .page-wrapper

        .page-header
          %h1 Rejestracja
          %h3 Zarejestruj się, aby zyskać dostęp do wszystkich funkcji strony.

        .container.form-container
          .row.justify-content-md-center
            .form-group.col-md-6

              = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                = devise_error_messages!

                .field
                  = f.label :name, 'Nazwa konta'
                  = f.text_field :name, autofocus: true, class: 'form-control'


                .field
                  = f.label :email, 'E-mail'
                  = f.email_field :email, autocomplete: "email", class: 'form-control'

                .field
                  = f.label :password, 'Hasło'
                  - if @minimum_password_length
                    %em.small
                      (Minimum
                      =@minimum_password_length
                      znaków)


                  = f.password_field :password, autocomplete: "new-password", class: 'form-control'


                .field
                  = f.label :password_confirmation, 'Potwierdź hasło'
                  = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'


                .actions
                  = f.submit "Zarejestruj", class: 'btn btn-do'

              %p Masz już konto?
              = render "devise/shared/links"
