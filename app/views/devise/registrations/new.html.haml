= provide(:button_text, 'Zarejestruj')
= provide(:title, 'Rejestracja')



.login-page-wrapper
  .login-page
    .row
      .col-md-6.login-page-cover

      .col-md-6.login-form-cover

        .login-page-content
          .container.form-container
            .user-actions
              = active_link_to "Logowanie",new_user_session_path, class: "btn btn-do-bordered"
              = active_link_to "Rejestracja",new_user_registration_path, class: "btn btn-do-bordered"
            .row.justify-content-md-center
              .form-group.col-md-6

                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  = devise_error_messages!

                  .input-group
                    = f.label :name, 'Nazwa konta'
                    = f.text_field :name, autofocus: true, class: 'form-control'


                  .input-group
                    = f.label :email, 'E-mail'
                    = f.email_field :email, autocomplete: "email", class: 'form-control'

                  .input-group
                    = f.label :password
                    - if @minimum_password_length
                      %em.small
                        (Minimum
                        =@minimum_password_length
                        znaków)


                    = f.password_field :password, autocomplete: "new-password", class: 'form-control'


                  .input-group
                    = f.label :password_confirmation, 'Potwierdź hasło'
                    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'


                  .actions
                    = f.submit "Zarejestruj", class: 'btn btn-do-vitru'

                = render "devise/shared/links"
