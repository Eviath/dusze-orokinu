<div class="clan-index">


<div class="container">

<div class="row">

  <% if @clans.any? %>

<% @clans.each do |clan| %>
  <div class="col-md-4 clan-col">




      <h1><%= link_to clan.user.name, clan.user %></h1>

    <h2>Nazwa klanu: <span><%= clan.name %></span></h2>
    <h2>Nick lidera: <span><%= clan.leader %></span></h2>
    <h2>Tier klanu: <span><%= clan.tier %></span></h2>


  <p>   <%= link_to truncate('Zobacz'), clan, class: "btn btn-do-bordered-small" %>

    <% if current_user.admin? || current_user?(@user) %>
    | <%= link_to "Usuń", clan, method: :delete,
                                  data: { confirm: "Jesteś pewny, że chcesz to usunąć?" }, class: "btn btn-do-bordered-small" %>
      <%= link_to "Edytuj", edit_clan_path(current_user.clan), class: "btn btn-do-bordered-small" %>
    <% end %>
</p>

    </div>
<% end %>


<% else %>
<div class="container">
  <div class="row">
      <div class="col-md-8 mx-auto text-center">
<h4> Nie ma żadnych klanów!</h4>
      </div>
  </div>
</div>


<% end %>


</div>
</div>
</div>
