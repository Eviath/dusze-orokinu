= provide(:title, 'Kontakt')



.page-header
  .discord-page
    .row
      .col-md-12
        .discord-header
          .jumbotron.clans_jumbotron
            %h1.display-4=image_tag(asset_pack_path('media/discord.svg'))
            %p.lead=@api_name
            %hr.my-4
            %p Użytkownicy online: #{@api_users.count}
            %p
            %p.lead
              Dołącz do nas
              =link_to @api_invite, @api_invite, target: '_blank'


        .discord-body

          -@api_users.each_with_index do |r|
            .discord-person-col
              .discord-person
                =image_tag r['avatar_url'], class: 'discord-img'
                %p=r['username']
