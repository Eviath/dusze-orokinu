= form_for @news_category do |f|
  - if @news_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news_category.errors.count, "error")} prohibited this news_category from being saved:"
      %ul
        - @news_category.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :desc
    = f.text_area :desc
  .actions
    = f.submit 'Save'
