<li class="list-group-item clearfix">
  
  <span class="conversation-subject"><%= link_to conversation.subject, conversation_path(conversation) %></span>

  <div class="btn-group-vertical pull-right">
    <% if conversation.is_trashed?(current_user) %>
      <%= link_to 'Przywróć', restore_conversation_path(conversation), class: 'btn btn-do-bordered', method: :post %>
    <% else %>
      <%= link_to 'Przenieś do kosza', conversation_path(conversation), class: 'btn btn-do-bordered', method: :delete,
                  data: {confirm: 'Jesteś pewny?'} %>

      <% if conversation.is_unread?(current_user) %>
        <%= link_to 'Oznacz jako przeczytane', mark_as_read_conversation_path(conversation),
                    class: 'btn  btn-do', method: :post %>
      <% end %>
    <% end %>
  </div>

  <p><%= render 'conversations/participants', conversation: conversation %></p>

  <p><%= conversation.last_message.body %>
    <small>(<span class="text-muted"> <%= l conversation.last_message.created_at, format: :long %></span> ) </small></p>
</li>
