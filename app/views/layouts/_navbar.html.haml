%header.navbar.navbar-dark.nav-down.fixed-top.navbar-expand-xl.bg-faded#navbar
  .mobile-more-navbar
    %ul
      -if user_signed_in?
        %li.nav-item.sidebar-nav-item
          %a.show-sidebar
            %i.fas.fa-bars
      -else
        %li.nav-item
          = link_to new_user_session_path, class: "nav-link" do
            %i.fas.fa-user

  = link_to alliance_path, class: "navbar-brand" do
    =application_logo('brand-image d-inline-block align-top')
    %span Dusze Orokinu


  %button.navbar-toggler{type: "button", 'data-toggle': "collapse", 'data-target': "#navbarNavDropdown", 'aria-controls': "navbarNavDropdown", 'aria-expanded': "false", 'aria-label': "Toggle navigation"}
    %span.navbar-toggler-icon
  .collapse.navbar-collapse#navbarNavDropdown
    %ul.navbar-nav

    %ul.nav.navbar-nav.ml-auto

      %li.nav-item.dropdown
        %a.nav-link.dropdown-toggle{href: "#", 'id': "navbarDropdownMenuLink", 'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false"}
          Sojusz
        .dropdown-menu{'aria-labelledby': "navbarDropdownMenuLink"}
          = active_link_to "O Nas",alliance_about_path, class: "dropdown-item"
          = active_link_to "Regulamin",alliance_rules_path, class: "dropdown-item"

      %li.nav-item
        = active_link_to "Aktualno≈õci",news_index_path, class: "nav-link"

      %li.nav-item
        = active_link_to "Klany",clans_path, class: "nav-link"

      %li.nav-item.dropdown
        %a.nav-link.dropdown-toggle{href: "#", 'id': "navbarDropdownMenuLink", 'data-toggle': "dropdown", 'aria-haspopup': "true", 'aria-expanded': "false"}
          Warframe

        .dropdown-menu{'aria-labelledby': "navbarDropdownMenuLink"}
          = active_link_to "PoE",warframe_poe_path, class: "dropdown-item"
          = active_link_to "Newsy",warframe_newsfeed_path, class: "dropdown-item"
          = active_link_to "Misje",warframe_missions_path, class: "dropdown-item"
          = active_link_to "Tabelka Dropu",warframe_wfdrop_path, class: "dropdown-item"

      %li.nav-item
        = active_link_to "Twitch",twitch_index_path, class: "nav-link"

      %li.nav-item
        = active_link_to "Kontakt",contact_index_path, class: "nav-link"

      %li.nav-item
        = active_link_to "Informacje",alliance_info_path, class: "nav-link"

        -if user_signed_in?
          %li.nav-item.sidebar-nav-item.lg-sidebar
            %a.show-sidebar
              %i.fas.fa-bars
        -else
          %li.nav-item.lg-sidebar
            = link_to new_user_session_path, class: "nav-link" do
              %i.fas.fa-user

      %li.nav-item
        -if cookies[:layout] == 'application' || cookies[:layout].nil?
          = link_to "Vitruvian", url_for(controller: '/application', action: :vitruvian), class: "nav-link" , data: { turbolinks: false }
        -else
          = link_to "Ghostie", url_for(controller: '/application', action: :application), class: "nav-link", data: { turbolinks: false }



