-@user.each do |i|
  %p=i.login
  %p=i.id
  =image_tag i.profile_image_url, class:"twitch-user-image"
  %p View Count #{i.view_count}
  %p Description #{i.description}
  %p=@client.get_games({id: @stream.map(&:game_id)}).data.first.try(:name)


  %iframe{  src:"https://player.twitch.tv/?channel=#{i.login}&autoplay=false",
                  height:"400",
                        width:"800",
                        scrolling:"true",
                        allowfullscreen:"true"}
